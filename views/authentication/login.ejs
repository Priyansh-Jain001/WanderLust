<% layout("/layouts/boilerplate") %>
<body>
    <div class="signup-container mt-5 col-5 offset-3">
        <h3 class="mb-3 offset-5">Login</h3>
        <form method="POST" action="/login" class="needs-validation" novalidate>
            <div class="mb-3 col-8 offset-2">
                <label for="username" class="form-label">Username</label>
                <input class="form-control" id="username" placeholder="@username" name="username" required>
                <div class="invalid-feedback">Please Enter username</div>
            </div>
            

            <div class="mb-3 col-8 offset-2">
                <label for="password" class="col-form-label">Password</label>
                <input type="password" id="password" class="form-control" aria-describedby="passwordHelpInline" name="password" required>
                <span id="passwordHelpInline" class="form-text">
                    Must be 8-20 characters long.
                </span>
                <div class="invalid-feedback">Please enter password</div>
            </div>

            <div>
                <button class="btn btn-success mb-3 col-4 offset-4">Login</button>
            </div>
        </form>

        <p class="mb-3 col-8 offset-3">Don't have an account? <a href="/signup" style="text-decoration: none; color: #198754;"> Register</a></p>
        
    </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
